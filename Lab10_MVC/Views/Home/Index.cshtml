@{
    string greeting = "Hiya!";
}

<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Don't Wine About It</title>
    <link rel="stylesheet" href="~/style/Reset.css" />
    <link rel="stylesheet" href="~/style/StyleSheet.css" />
</head>
<body>
    <h1>@greeting!</h1>

    <form method="post">
        <label for="WinePrice">Wine Price</label>
        <input type="text" maxlength="10" name="WinePrice" />

        <label for="PointRating">Point Rating</label>
        <input type="number" maxlength="2" name="PointRating" />

        <button type="submit">Submit!</button>
    </form>

</body>
</html>